<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/preview.jpeg</argument>
                <argument name="logo_width" xsi:type="number">150</argument>
                <argument name="logo_height" xsi:type="number">150</argument>
                <argument name="logo_alt" xsi:type="string">Logo PatBrands</argument>
            </arguments>
        </referenceBlock>
		<referenceBlock name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="bloque.apertura" template="Magento_Theme::html/bloque-apertura.phtml" before="-"/>
		</referenceBlock>
		
        <referenceContainer name="footer">
            <block class="Magento\Theme\Block\Html\Footer" name="bloque-cierre" template="Magento_Theme::html/bloque-cierre.phtml" after="-" />
        </referenceContainer>

    </body>
</page>